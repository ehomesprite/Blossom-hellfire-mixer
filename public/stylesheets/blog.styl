body 
  margin 0
  height 100%
#page
  margin 0
  height 100%
#header
  margin 0
  padding 20px 0
  text-align center
  font-size 60px
  background-color #e6e6e6
  text-shadow 1px 2px 2px #ddd
#topNav
  background-color #ffc0c0
  height 50px
  width 100%
  font-size 20px
  .linkButton
    padding 10px 15px 10px 15px
    width auto
    height 50px
    display inline-block
.topnav-relative
  position relative
  top 0
  left 0
.topnav-fixed
  position fixed
  top 0
  left 0
#sideBar
  float left
  background-color #c0ffc0
  width 300px
.sideBar-relative
  position relative
  top 0
  left 0
.sideBar-fixed
  position fixed
  top 50px
  left 0
  bottom 0
#articleList
  margin 0 0 0 300px
  .articleItem
    margin 20px 0
    padding 0 20px
    background-color #c0c0ff
    max-width 800px
  .articleTitle
    font-size 22px
  .articleTime
    font-size 10px
  .articleAbstract
    font-size 16px
  .articleBody
    font-size 16px
    display none
